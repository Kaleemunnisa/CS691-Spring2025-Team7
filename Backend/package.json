{
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.1.0",
    "http": "^0.0.1-security",
    "litellm": "^0.12.0",
    "openai": "^4.86.1",
    "socket.io": "^4.8.1"
  }
}
name: CI/CD Pipeline

on:
  push:
    branches:
      - main  # Runs CI/CD when changes are pushed to main
  pull_request:
    branches:
      - main  # Runs CI/CD when a pull request is created

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install Dependencies
        run: npm install
        working-directory: Backend  # Specify the correct directory

      - name: Run Tests
        run: npm test || echo "Tests failed, continuing..."
        working-directory: Backend  # Specify the correct directory

      - name: Build Project
        run: npm run build || echo "Skipping build"
        working-directory: Backend  # Specify the correct directory

  deploy:
    needs: build
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Deploy to Vercel
        run: vercel --prod --token=${{ secrets.VERCEL_TOKEN }}  # Make sure to set the VERCEL_TOKEN
